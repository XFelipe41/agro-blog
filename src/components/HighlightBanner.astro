---
// Banner destacado con imagen de fondo y contenido superpuesto
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  backgroundImage: string;
}

const { 
  title = "Únete a la revolución agroecológica", 
  description = "Descubre cómo nuestro enfoque integrado está transformando la agricultura en Colombia", 
  buttonText = "Conoce más", 
  buttonLink = "/contacto",
  backgroundImage = "https://images.unsplash.com/photo-1500651230702-0e2d8a49d4ad?q=80&w=1000" 
} = Astro.props;
---

<div class="relative overflow-hidden my-16">
  <!-- Imagen de fondo -->
  <div class="absolute inset-0">
    <img 
      src={backgroundImage} 
      alt="Banner de agroecología" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 to-primary-800/75"></div>
  </div>
  
  <!-- Contenido del banner -->
  <div class="relative max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8 flex items-center min-h-[300px]">
    <div class="max-w-2xl text-white" data-aos="fade-right">
      <h2 class="text-3xl md:text-4xl font-bold font-display mb-4">{title}</h2>
      <p class="text-lg text-white/90 mb-8 max-w-xl">{description}</p>
      <a 
        href={buttonLink} 
        class="inline-flex items-center px-6 py-3 border-2 border-white text-base font-medium rounded-md text-white bg-transparent hover:bg-white hover:text-primary-800 transition-colors duration-300 shadow-md"
      >
        {buttonText}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
  
  <!-- Decoración inferior -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 48" fill="#ffffff" preserveAspectRatio="none">
      <path d="M0,48L80,42.7C160,37,320,27,480,21.3C640,16,800,16,960,21.3C1120,27,1280,37,1360,42.7L1440,48L1440,48L1360,48C1280,48,1120,48,960,48C800,48,640,48,480,48C320,48,160,48,80,48L0,48Z"></path>
    </svg>
  </div>
</div> 