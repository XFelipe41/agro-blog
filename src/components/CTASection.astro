---
export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<section class="bg-gradient-to-br from-primary-800 to-primary-900 text-white py-20 relative overflow-hidden">
  <!-- Fondo de decoración -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-64 h-64 md:w-96 md:h-96 rounded-full bg-primary-700/30 blur-3xl translate-x-[-30%] translate-y-[-30%]"></div>
    <div class="absolute bottom-0 right-0 w-64 h-64 md:w-96 md:h-96 rounded-full bg-primary-700/30 blur-3xl translate-x-[30%] translate-y-[30%]"></div>
    
    <!-- Patrón geométrico -->
    <div class="absolute inset-0 opacity-5">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 80">
        <path fill="#fff" fill-rule="evenodd" d="M0 0h20v20H0V0zm20 20h20v20H20V20zm20-20h20v20H40V0zm20 20h20v20H60V20zM0 40h20v20H0V40zm20 20h20v20H20V60zm20-20h20v20H40V40zm20 20h20v20H60V60z"/>
      </svg>
    </div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-10">
        <!-- Texto del CTA -->
        <div class="md:w-1/2" data-aos="fade-right">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 font-display leading-tight">
            {title}
          </h2>
          <p class="text-lg text-primary-100 mb-8">
            {description}
          </p>
        </div>
        
        <!-- Formulario -->
        <div class="md:w-1/2 bg-white/10 backdrop-blur-sm rounded-xl p-6 shadow-lg" data-aos="fade-left">
          <form class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-white mb-1">Nombre</label>
              <input 
                type="text" 
                id="name"
                placeholder="Tu nombre" 
                class="w-full px-4 py-3 rounded-md border-none focus:outline-none focus:ring-2 focus:ring-primary-400 text-gray-800 shadow-sm"
                required
              >
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-white mb-1">Correo electrónico</label>
              <input 
                type="email" 
                id="email"
                placeholder="correo@ejemplo.com" 
                class="w-full px-4 py-3 rounded-md border-none focus:outline-none focus:ring-2 focus:ring-primary-400 text-gray-800 shadow-sm"
                required
              >
            </div>
            
            <button 
              type="submit" 
              class="w-full px-6 py-3 bg-white text-primary-700 rounded-md font-semibold hover:bg-gray-100 transition-colors shadow-sm mt-2 flex items-center justify-center group"
            >
              <span>Suscribirme</span>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </button>
            
            <p class="text-xs text-primary-200 mt-4 text-center">
              Al suscribirte, aceptas nuestra política de privacidad.
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decoración inferior -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 48" fill="#f9fafb" preserveAspectRatio="none">
      <path d="M0,48L80,42.7C160,37,320,27,480,21.3C640,16,800,16,960,21.3C1120,27,1280,37,1360,42.7L1440,48L1440,48L1360,48C1280,48,1120,48,960,48C800,48,640,48,480,48C320,48,160,48,80,48L0,48Z"></path>
    </svg>
  </div>
</section> 